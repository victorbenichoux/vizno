{
  "scripts": {
    "prelint": "npm run prettier:check",
    "lint": "npm run tsc && npm run eslint",
    "tsc": "tsc vizno/js/*.js --noEmit --allowJS",
    "eslint": "eslint --max-warnings 0 vizno/js",
    "prettier:check": "npx --no-install prettier vizno/js --check",
    "prettier:fix": "npx --no-install prettier vizno/js --write"
  },
  "eslintConfig": {
    "extends": "preact"
  },
  "devDependencies": {
    "eslint": "^7.14.0",
    "eslint-config-preact": "^1.1.3"
  },
  "dependencies": {
    "prettier": "^2.2.0",
    "typescript": "^4.1.2"
  }
}
